<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.github.PCU.android">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:process=":PCUAppProcess"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.github.PCU.android.MainScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:process=":PCUAppProcess">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.PCU.android.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.github.PCU.android.MainScreen"
            android:process=":PCUAppProcess">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.PCU.android.MainScreen"/>
        </activity>
        <activity
            android:name="com.github.PCU.android.DeviceNotSecure"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_device_not_secure"
            android:theme="@style/FullscreenTheme"
            android:process=":PCUAppProcess"/>
        <activity
            android:name="com.github.PCU.android.ServerSettings.ListActivity"
            android:label="@string/title_activity_server_settings"
            android:parentActivityName="com.github.PCU.android.MainScreen"
            android:theme="@style/AppTheme.NoActionBar"
            android:process=":PCUAppProcess">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.PCU.android.MainScreen"/>
        </activity>
        <activity
            android:name="com.github.PCU.android.ServerSettings.EditActivity"
            android:label="@string/title_activity_server_edit"
            android:parentActivityName="com.github.PCU.android.ServerSettings.ListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:process=":PCUAppProcess">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.PCU.android.ServerSettings.ListActivity"/>
        </activity>
        <activity
            android:name="com.github.PCU.android.UnlockActivity"
            android:label="Unlock"
            android:parentActivityName="com.github.PCU.android.MainScreen"
            android:theme="@style/AppTheme.NoActionBar"
            android:process=":PCUAppProcess">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.PCU.android.MainScreen"/>
        </activity>

        <receiver
            android:name="com.github.PCU.android.onBoot"
            android:enabled="true"
            android:exported="false"
            android:excludeFromRecents="true"
            android:process=":BackgroundServiceProcess">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <service
            android:name="com.github.PCU.android.BackgroundService"
            android:enabled="true"
            android:excludeFromRecents="true"
            android:process=":BackgroundServiceProcess"
            android:exported="false"/>
    </application>

</manifest>
